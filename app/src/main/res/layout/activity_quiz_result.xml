<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_background"
    android:orientation="vertical"
    tools:context=".QuizResultActivity">

    <TextView
        android:id="@+id/total_questions_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="Total questions: 0"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/correct_answers_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Correct answers: 0"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/wrong_answers_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Wrong answers: 0"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/score_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Your score is: 0 / 0"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/try_again_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="tryAgainButtonClicked"

            android:text="@string/try_again"
            android:textColor="@android:color/holo_red_dark" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/result_analysis_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="resultAnalysisButtonClicked"
            android:text="@string/result_analysis"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>

</LinearLayout>